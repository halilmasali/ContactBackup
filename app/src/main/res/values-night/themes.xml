<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ContactBackup" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryColorDarkDark</item>
        <item name="colorAccent">@color/accentColorDark</item>
        <item name="android:windowBackground">@color/backgroundColorDark</item>
    </style>
    <style name="Theme.MyApp.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/backgroundColorDark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ContactBackup</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>